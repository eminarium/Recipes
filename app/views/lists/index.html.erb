<% if current_user %>
  <div class="list-group mt-3">
    <div class="container-fluid bg-dark text-light rounded-3 p-2 d-flex justify-content-between">
      <h1 class="display-5 mt-3 ms-2">My Lists</h1>
      <%= link_to "New List", 
                  new_list_path, 
                  data: { turbo_frame: dom_id(List.new) },
                  class: "btn btn-primary my-4 me-3" %>
    </div>
  </div>

  <%= turbo_frame_tag List.new %>

  <%= turbo_frame_tag "lists" do %>
    <% if @lists.empty? %>
      <h1 class="display-3">You have no lists yet</h1>
    <% end %>

    <%= render @lists %>
  <% end %>
<% end %>