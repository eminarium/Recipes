<div class="row  justify-content-between">

  <div class="col">
    <h1><%= @list.title %></h1>
  </div>

  <div class="col-2">
    <%= link_to lists_path, class: "btn btn-primary" do %>
      <i class="fa-solid fa-list"></i>
    <% end %>
    
    <%= link_to edit_list_path(@list), class: "btn btn-warning" do %>
      <i class="fa-solid fa-pencil"></i>
    <% end %>
    
    <%= link_to @list, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" do %>
      <i class="fa-solid fa-times"></i>
    <% end %>
  </div>

</div>



