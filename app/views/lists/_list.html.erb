<%= turbo_frame_tag list do %>
  <%= turbo_frame_tag dom_id(list, :edit) do %>

    <div class="list-group-item d-flex justify-content-between ms-2 mt-3 rounded-2">
      <div>
        <%= link_to list, class: "list-group-item-action mb-1", style: "text-decoration: none" do %>
          <%= list.title %>
        <% end %>
      </div>
      <div>
        <span class="badge bg-primary p-2 me-4"><%= list.recipes.count %></span>
        <%= link_to list, class: "btn btn-primary" do %>
          <i class="fa-solid fa-info"></i>
        <% end %>
        <%= link_to edit_list_path(list), data: { turbo_frame: dom_id(list, :edit) }, class: "btn btn-warning" do %>
          <i class="fa-solid fa-pencil"></i>
        <% end %>
        <%= link_to list, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
          <i class="fa-solid fa-times"></i>
        <% end %>
      </div>
    </div>

  <% end %>

<% end %>