<%= form_for([@recipe, @instruction]) do |form| %>
  <%= form.text_area :content, class: "form-control", placeholder: "New instruction..." %>
  <%= form.button type: :submit, class: "btn btn-success mt-3 me-2" do %>
    <i class="fa-solid fa-check me-1"></i> OK
  <% end %>
  <%= link_to @recipe, class: "btn btn-warning mt-3" do %>
    <i class="fa-solid fa-times me-1"></i> Cancel
  <% end %>
  <hr/>
<% end %>