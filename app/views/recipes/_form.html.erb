<%= form_with(model: @recipe) do |form| %>
  <div class="mb-3">
    <%= form.label :title, style: 'display: block', class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %>
    <div style="color: red">
      <% if @recipe.errors.include?(:title) %>
        <% @recipe.errors.full_messages_for(:title).each do |error_message| %>
          <%= error_message %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :description, style: 'display: block', class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control' %>
    <div style="color: red">
      <% if @recipe.errors.include?(:description) %>
        <% @recipe.errors.full_messages_for(:description).each do |error_message| %>
          <%= error_message %>
        <% end %>
      <% end %>
    </div>
  </div>
  
  <div class="row mb-3">
    <div class="col border pt-3 pb-2 text-center">
      <%= form.label "Halal ?", class: "form-label me-2" %>
      <%= form.check_box :is_halal %>
    </div>
    <div class="col border pt-3 pb-2 text-center">
      <%= form.label "Kosher ?", class: "form-label me-2" %>
      <%= form.check_box :is_kosher %>
    </div>
    <div class="col border pt-3 pb-2 text-center">
      <%= form.label "Veg ?", class: "form-label me-2" %>
      <%= form.check_box :is_vegetarian %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.submit "Kabul Et", class: "btn btn-success" %>
  </div>
<% end %>