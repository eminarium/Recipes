<%= form_with(model: @recipe) do |form| %>
  <div class="mb-3">
    <%= form.label :title, style: 'display: block', class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %>
    <div style="color: red">
      <% if @recipe.errors.include?(:title) %>
        <% @recipe.errors.full_messages_for(:title).each do |error_message| %>
          <%= error_message %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :description, style: 'display: block', class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control' %>
    <div style="color: red">
      <% if @recipe.errors.include?(:description) %>
        <% @recipe.errors.full_messages_for(:description).each do |error_message| %>
          <%= error_message %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.submit "Kabul Et", class: "btn btn-success" %>
  </div>
<% end %>