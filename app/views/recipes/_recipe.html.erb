<a href="#" class="list-group-item list-group-item-action mt-3" aria-current="true">
  <div class="d-flex w-100 justify-content-between">
    <h5 class="mb-1"><%= recipe.title %></h5>
    <small>3 days ago</small>
  </div>
  <p class="mb-1"><%= recipe.description %></p>
  <small>And some small print.</small>
  <div class="row">

    <div class="col">
      Halal 
      <% if recipe.is_halal? %>
        <i class="bi bi-check-circle-fill ms-1" style="color: green"></i>
      <% else %>
        <i class="bi bi-x-circle-fill ms-1" style="color: red"></i>
      <% end %>
    </div>

    <div class="col">
      Kosher 
      <% if recipe.is_kosher? %>
        <i class="bi bi-check-circle-fill ms-1" style="color: green"></i>
      <% else %>
        <i class="bi bi-x-circle-fill ms-1" style="color: red"></i>
      <% end %>
    </div>

    <div class="col">
      Veg
      <% if recipe.is_vegetarian? %>
        <i class="bi bi-check-circle-fill ms-1" style="color: green"></i>
      <% else %>
        <i class="bi bi-x-circle-fill ms-1" style="color: red"></i>
      <% end %>
    </div>


  </div>
  <%= link_to "Details", recipe, class: "btn btn-primary" %>
</a>
