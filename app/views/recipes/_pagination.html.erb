<div class="row apple_pagination mb-3">

  <%= render 'recipes_per_page_form' %>

  <div class="col">

    <div class="page_info">
      <%= page_entries_info @recipes %>
    </div>

    <%= link_to :action => 'index', :page => 1, per_page: params[:per_page] do %>
      <i class="fa-solid fa-backward-fast"></i>
    <% end %>

    <%= will_paginate @recipes, container: false %>
    
    <%= link_to :action => 'index', :page => @recipes.total_pages, per_page: params[:per_page] do %>
      <i class="fa-solid fa-forward-fast"></i>
    <% end %>

  </div>

</div>