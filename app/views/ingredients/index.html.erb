<% if current_user %>
  <div class = "list-group mt-3">
    <div class = "container-fluid bg-dark text-light rounded-3 p-2 d-flex justify-content-between">
      <h1 class = "display-5 mt-3 ms-2">Ingredients List</h1>
      <%= link_to "New Ingredient",
                  new_ingredient_path,
                  data: { turbo_frame: dom_id(Ingredient.new) },
                  class: "btn btn-primary my-4 me-3"
      %>
    </div>
  </div>

  <%= turbo_frame_tag Ingredient.new %>

  <%= turbo_frame_tag "ingredients" do %>
    <% if @ingredients.empty? %>
      <h1 class = "display-3">You have no ingredients to list...</h1>
    <% end %>

    <%= render @ingredients %>
  <% end %>

<% end %>